{
  "compilerOptions": {
    // Target & Output
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",
    
    // Type Checking
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    
    // Module Resolution
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    
    // Interop Constraints
    "allowSyntheticDefaultImports": true,
    
    // Emit
    "incremental": true,
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,
    
    // Path Mapping
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/types/*": ["./src/types/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/services/*": ["./src/services/*"],
      "@/graphql/*": ["./src/graphql/*"],
      "@/abis/*": ["./src/abis/*"],
      "@/lib/*": ["./src/lib/*"]
    },
    
    // Advanced Options
    "resolvePackageJsonExports": true,
    "resolvePackageJsonImports": true,
    
    // Next.js specific
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  
  // ts-node configuration
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2020",
      "esModuleInterop": true
    },
    "transpileOnly": true,
    "files": true
  },
  
  // Include files
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/**/*",
    "next.config.ts"
  ],
  
  // Exclude files
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "build",
    "**/*.spec.ts",
    "**/*.test.ts",
    "coverage"
  ]
}